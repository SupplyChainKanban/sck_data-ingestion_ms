generator client {
  provider = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DataSource {
  id                String              @id @default(uuid())
  name              String
  description       String
  sourceType        DataSourceType
  connectionDetails Json
  frequency         DataSourceFrequency
  status            DataSourceStatus    @default(ACTIVE)
  available         Boolean             @default(true)
  lastAccessed      DateTime            @default(now())
  createAt          DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  rawData           RawData[]

  @@index([available])
  @@unique([name, description, sourceType, frequency])
}

model RawData {
  id                String          @id @default(uuid())
  dataSchemaVersion String
  dataPayload       Json
  ingestedBy        String
  priority          RawDataPriority
  status            RawDataStatus   @default(PENDING)
  available         Boolean         @default(true)
  lastAccessed      DateTime        @default(now())
  createAt          DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  dataSource        DataSource      @relation(fields: [dataSourceId], references: [id])
  dataSourceId      String

  @@index([available])
}

enum DataSourceType {
  MES
  MANUAL
  PROJECT
}

enum DataSourceFrequency {
  REAL
  PERIODIC
  MANUAL
}

enum DataSourceStatus {
  ACTIVE
  INACTIVE
}

enum RawDataPriority {
  HIGH
  MEDIUM
  LOW
}

enum RawDataStatus {
  PENDING
  VALIDATED
  ERROR
}
